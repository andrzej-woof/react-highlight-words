{
  "name": "@pigsty/react-highlight-words",
  "version": "0.22.0",
  "description": "React component to highlight words within a larger body of text",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "build": "npm run build:website && npm run build:dist",
    "build:website": "npm run clean:website && cross-env NODE_ENV=production webpack --config webpack.config.website.js -p --bail",
    "build:dist": "npm run clean:dist && cross-env NODE_ENV=production webpack --config webpack.config.dist.cjs.js --bail && cross-env NODE_ENV=production webpack --config webpack.config.dist.umd.js --bail",
    "clean": "npm run clean:website && npm run clean:dist",
    "clean:website": "rimraf build",
    "clean:dist": "rimraf dist",
    "deploy": "gh-pages -d build",
    "lint": "standard",
    "prebuild": "npm run lint",
    "prepublishOnly": "npm run build",
    "postpublish": "npm run deploy",
    "start": "webpack-dev-server --hot --config webpack.config.dev.js",
    "test": "cross-env NODE_ENV=test karma start",
    "watch": "watch 'clear && npm run lint -s && npm run test -s' src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrzej-woof/react-highlight-words.git"
  },
  "author": "Brian Vaughn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andrzej-woof/react-highlight-words/issues"
  },
  "homepage": "https://github.com/andrzej-woof/react-highlight-words#readme",
  "keywords": [
    "react",
    "reactjs",
    "react-component",
    "highlighter",
    "highlight",
    "text",
    "words",
    "matches",
    "substring",
    "occurrences",
    "search"
  ],
  "standard": {
    "ignore": [
      "build",
      "dist",
      "node_modules"
    ],
    "global": [
      "afterAll",
      "afterEach",
      "beforeAll",
      "beforeEach",
      "describe",
      "it",
      "jasmine"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "babel-loader": "^9.2.1",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "cssnext": "^1.8.4",
    "cssnext-loader": "^1.0.1",
    "expect.js": "^0.3.1",
    "gh-pages": "^6.2.0",
    "html-webpack-plugin": "^5.6.3",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-junit-reporter": "^2.0.1",
    "karma-mocha": "^2.0.1",
    "karma-sourcemap-loader": "^0.4.0",
    "karma-spec-reporter": "0.0.36",
    "karma-webpack": "^5.0.1",
    "latinize": "^2.0.0",
    "lodash": "^4.17.10",
    "mocha": "^11.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-transform-hmr": "^1.0.1",
    "rimraf": "^6.0.1",
    "standard": "^17.1.2",
    "style-loader": "^4.0.0",
    "watch": "^1.0.2",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.0",
    "worker-loader": "^3.0.8"
  },
  "dependencies": {
    "highlight-words-core": "^1.2.0",
    "memoize-one": "^6.0.0",
    "prop-types": "^15.5.8"
  },
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0 || ^16.0.0-0 || ^17.0.0-0 || ^18.0.0-0 || ^19.0.0-0"
  }
}
